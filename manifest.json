{
    "manifest_version": 3,
    "name": "Zen Extension",
    "version": "1.0",
    "description": "This extension support visualizing tactics in a football match",
    "icons":{
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "action":{

    },
    "commands":{
        "_execute_action":{
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "mac": "MacCtrl+Shift+X"
            }
        }
    },
    "background":{
        "service_worker": "background.js"
    },
    "permissions":[
        "contextMenus","activeTab","scripting","storage","tabs","webNavigation","webRequest","idle","downloads"
    ],
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ]
}